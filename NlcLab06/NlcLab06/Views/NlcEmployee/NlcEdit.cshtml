@model NlcLab06.Models.NlcEmployee

<h2>Chỉnh sửa nhân viên</h2>

<form asp-action="NlcEditPUT" method="post">
    <input type="hidden" asp-for="NlcId" />

    <div class="mb-3">
        <label asp-for="NlcName" class="form-label"></label>
        <input asp-for="NlcName" class="form-control" />
        <span asp-validation-for="NlcName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NlcBirthDay" class="form-label"></label>
        <input asp-for="NlcBirthDay" type="date" class="form-control" />
        <span asp-validation-for="NlcBirthDay" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NlcEmail" class="form-label"></label>
        <input asp-for="NlcEmail" class="form-control" />
        <span asp-validation-for="NlcEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NlcPhone" class="form-label"></label>
        <input asp-for="NlcPhone" class="form-control" />
        <span asp-validation-for="NlcPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NlcSalary" class="form-label"></label>
        <input asp-for="NlcSalary" type="number" class="form-control" />
        <span asp-validation-for="NlcSalary" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NlcStatus" class="form-label"></label>
        <select asp-for="NlcStatus" class="form-select">
            <option value="">-- Chọn trạng thái --</option>
            <option value="Đang làm">Đang làm</option>
            <option value="sinh viên">Sinh viên</option>
            <option value="Nghỉ việc">Nghỉ việc</option>
        </select>
        <span asp-validation-for="NlcStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="NlcIndex" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
